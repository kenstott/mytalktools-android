<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contact_detail_type"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text=""
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/message"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="@color/transparent"
            android:cropToPadding="false"
            android:padding="0dp"
            android:src="@drawable/ic_message_black_18dp"
            android:tint="@android:color/holo_blue_dark"
            android:visibility="visible"
            tools:paddingLeft="0dp"
            android:contentDescription="@string/message_contact" />

        <ImageButton
            android:id="@+id/call"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="@color/transparent"
            android:cropToPadding="false"
            android:padding="0dp"
            android:src="@drawable/ic_call_black_18dp"
            android:tint="@android:color/holo_blue_dark"
            android:visibility="visible"
            tools:paddingLeft="0dp"
            android:contentDescription="@string/call_contact" />

        <ImageButton
            android:id="@+id/mail"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="@color/transparent"
            android:cropToPadding="false"
            android:padding="0dp"
            android:src="@drawable/ic_mail_outline_black_18dp"
            android:tint="@android:color/holo_blue_dark"
            android:visibility="visible"
            android:contentDescription="@string/email_contact" />

        <ImageButton
            android:id="@+id/directions"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="@color/transparent"
            android:cropToPadding="false"
            android:padding="0dp"
            android:src="@drawable/ic_directions_black_18dp"
            android:tint="@android:color/holo_blue_dark"
            android:visibility="visible"
            android:contentDescription="@string/get_directions_to_contact" />

        <ImageButton
            android:id="@+id/map"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="@color/transparent"
            android:cropToPadding="false"
            android:padding="0dp"
            android:src="@drawable/ic_place_black_18dp"
            android:tint="@android:color/holo_blue_dark"
            android:visibility="visible"
            android:contentDescription="@string/get_a_map_of_the_contact_s_address" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp" />
</LinearLayout>