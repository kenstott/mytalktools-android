<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/beginning_on"></TextView>

        <EditText
            android:id="@+id/startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:editable="false"
            android:focusable="false"
            android:ems="5"
            android:inputType="date"
            tools:ignore="Deprecated,LabelFor" />
        <EditText
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:editable="false"
            android:focusable="false"
            android:ems="5"
            android:inputType="time"
            tools:ignore="Deprecated,LabelFor" />


    </TableRow>

    <TableRow
        android:id="@+id/tableRow1a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_column="0"
            android:text="@string/repeats"></TextView>

        <Spinner
            android:id="@+id/repeatOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:layout_span="2" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton"
            android:layout_column="1"
            android:textOff="@string/forever"
            android:visibility="gone"
            android:textOn="@string/until"
        android:layout_span="2" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:editable="false"
            android:focusable="false"
            android:ems="5"
            android:inputType="date"
            tools:ignore="Deprecated,LabelFor" />

    </TableRow>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/one"
        android:showDividers="middle">

        <Button
            android:id="@+id/cancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/cancel"></Button>

        <Button
            android:id="@+id/ok"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/ok"></Button>
    </LinearLayout>
</TableLayout>
