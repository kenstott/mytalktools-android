<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="5.0sp"
    android:layout_marginLeft="5.0sp"
    android:layout_marginRight="5.0sp"
    android:minWidth="250.0px"
    android:orientation="vertical">

    <EditText
        android:id="@id/EditTextPhrase"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="4"
        tools:ignore="LabelFor" />

    <LinearLayout
        android:id="@id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/one"
        android:showDividers="middle">

        <Button
            android:id="@id/ButtonCancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50.0"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/cancel" />

        <Button
            android:id="@id/ButtonOk"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50.0"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/ok" />
    </LinearLayout>
</LinearLayout>