<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sharePhrase"
    android:theme="@android:style/Theme.Dialog" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:orientation="horizontal" >
    
    <View
       android:layout_width="fill_parent"
       android:layout_height="1dp"
       android:background="@android:color/darker_gray" />
    
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_vertical"
        android:layout_row="4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_column="0"
        android:layout_row="1"
        android:divider="@drawable/one"
        android:dividerPadding="8dip"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="center_horizontal"
        android:showDividers="middle" >
		<ImageButton
		    android:id="@+id/facebookButton"
		    android:contentDescription="@string/accessibleFacebook"
		    style="?android:attr/borderlessButtonStyle"
		    android:layout_gravity="left"
		    android:paddingLeft="25dp"
		    android:paddingRight="25dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/facebook"
		    android:background="?android:attr/selectableItemBackground"
		    android:clickable="true" />
		<ImageButton
		    android:id="@+id/googleButton"
		    android:contentDescription="@string/accessibleGoogle"
		    style="?android:attr/borderlessButtonStyle"
		    android:gravity="center"
		    android:paddingLeft="25dp"
		    android:paddingRight="25dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/google"
		    android:background="?android:attr/selectableItemBackground"
		    android:clickable="true" />
		<ImageButton
		    android:id="@+id/twitterButton"
		    android:contentDescription="@string/accessibleTwitter"
		    style="?android:attr/borderlessButtonStyle"
		    android:gravity="right"
		    android:paddingLeft="25dp"
		    android:paddingRight="25dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/twitter"
		    android:background="?android:attr/selectableItemBackground"
		    android:clickable="true" />
	</LinearLayout>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_column="0"
        android:layout_row="2"
        android:divider="@drawable/one"
        android:dividerPadding="8dip"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:showDividers="middle" >
		<ImageButton 
		    android:id="@+id/emailButton"
		    style="?android:attr/borderlessButtonStyle"
		    android:contentDescription="@string/accessibleEmail"
  		    android:gravity="right"
		    android:paddingLeft="75dp"
		    android:paddingRight="25dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/mail"
		    android:background="?android:attr/selectableItemBackground"
		    android:clickable="true" />
	</LinearLayout>
	
    <View
       android:layout_width="fill_parent"
       android:layout_height="1dp"
       android:background="@android:color/darker_gray" />
	
     <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:divider="@drawable/one"
        android:dividerPadding="8dip"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:showDividers="middle" >
		<Button
	        android:id="@+id/exitButton"
	        style="?android:attr/borderlessButtonStyle"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="bottom"
	        android:background="?android:attr/selectableItemBackground"
	        android:text="@string/exit_button" />

	</RelativeLayout>
</GridLayout>