<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <ImageView android:contentDescription="@string/image_detail" android:src="@drawable/icon" android:layout_height="0dip" android:layout_width="match_parent" android:layout_weight="1" android:padding="5dp" android:id="@+id/imageView"></ImageView>

    <TextView
        android:id="@+id/cellTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge" android:minLines="0" android:maxLines="6" android:layout_weight=".01"/>

</LinearLayout>
