<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

<GridLayout
    android:id="@+id/textproperties"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:orientation="horizontal" >

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_vertical"
        android:layout_row="12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:divider="@drawable/one"
        android:dividerPadding="8dip"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:showDividers="middle" >

        <TextView
            android:id="@+id/textDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/text" />

        <EditText
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70.0"
            android:hint="@string/text_Display"
            android:inputType="text"
            android:maxLines="1"
            android:minLines="1"
            android:paddingRight="5dp"
            android:textSize="15.0sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:divider="@drawable/one"
        android:dividerPadding="8dip"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:showDividers="middle" >

        <TextView
            android:id="@+id/promptDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/prompt_Display" />

        <EditText
            android:id="@+id/prompt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70.0"
            android:hint="@string/prompt"
            android:inputType="text"
            android:maxLines="1"
            android:minLines="1"
            android:paddingRight="5dp"
            android:textSize="15.0sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:divider="@drawable/one"
        android:dividerPadding="8dip"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:showDividers="middle" >

        <TextView
            android:id="@+id/ttsDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/tts" />

        <EditText
            android:id="@+id/tts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70.0"
            android:hint="@string/tts"
            android:inputType="text"
            android:maxLines="1"
            android:minLines="1"
            android:paddingRight="5dp"
            android:textSize="15.0sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="5"
        android:divider="@drawable/one"
        android:dividerPadding="8dip"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:showDividers="middle" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/no_phrase" />

        <Switch
            android:id="@+id/doNotAddToPhrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="off"
            android:textOn="on"
            android:title="@string/add_to_phrase" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="6"
        android:divider="@drawable/one"
        android:dividerPadding="8dip"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:showDividers="middle" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/zoom_override" />

        <Switch
            android:id="@+id/doNotZoomPics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="off"
            android:textOn="on" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="7"
        android:divider="@drawable/one"
        android:dividerPadding="8dip"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:showDividers="middle" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/always_zoom" />

        <Switch
            android:id="@+id/alwaysZoomPics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="off"
            android:textOn="on" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:divider="@drawable/one"
        android:dividerPadding="8dip"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:showDividers="middle" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/backgrounCellColor" />

        <Spinner
            android:id="@+id/setBackgroundColor"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50.0"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/change_background_color" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/one"
        android:dividerPadding="8dip"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:showDividers="middle" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/textSize" />

        <Spinner
            android:id="@+id/setFontSize"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="50.0"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical|center_horizontal|start"
            android:text="@string/change_font_size" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/one"
        android:dividerPadding="8dip"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:showDividers="middle" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/textColor" />

        <Spinner
            android:id="@+id/setFontColor"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50.0"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/change_font_color" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="10"
        android:divider="@drawable/one"
        android:dividerPadding="12dip"
        android:showDividers="middle" >

        <Button
            android:id="@+id/doneButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/done_button" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_gravity="left"
        android:background="@android:color/darker_gray" />

</GridLayout>

</ScrollView>