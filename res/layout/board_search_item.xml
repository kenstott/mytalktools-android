<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/boardSearchItem"
    android:layout_width="match_parent" android:layout_height="190dp" >

    <ImageView
        android:id="@+id/boardSearchCellImage"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:contentDescription="@string/cell_text_description" />

    <TextView
        android:id="@+id/boardSearchCellText"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/boardSearchCellImage"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall">
	</TextView>
	
    <TextView
        android:id="@+id/boardSearchBoardTags"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/boardSearchCellText"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium">
    </TextView>

    <WebView
        android:id="@+id/boardSearchBoard"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_centerVertical="false"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/boardSearchCellImage" />

</RelativeLayout>
